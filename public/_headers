# Cache static assets for 1 year
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache JavaScript files for 1 year
*.js
  Cache-Control: public, max-age=31536000, immutable

# Cache CSS files for 1 year  
*.css
  Cache-Control: public, max-age=31536000, immutable

# Cache image files for 1 year
*.png
  Cache-Control: public, max-age=31536000, immutable

*.jpg
  Cache-Control: public, max-age=31536000, immutable

*.jpeg
  Cache-Control: public, max-age=31536000, immutable

